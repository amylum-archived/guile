Prospectus.extra_dep('file', 'pkgforge')

item do
  expected do
    url_xpath
    url 'http://www.gnu.org/software/guile/download/'
    xpath '/html/body/main/section/h1'
    regex /^Download Guile ([\d.]+)$/
  end

  actual do
    git_tag
    regex /^(.*)-\d+$/
  end

  deps do
    PkgForge.load_from_file.deps.each do |dep_name, current_version|
      item do
        name dep_name

        expected do
          github_release
          repo "amylum/#{dep_name}"
        end

        actual do
          static
          set current_version
        end
      end
    end
  end
end
